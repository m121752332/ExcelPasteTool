<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- 深色模式主題 -->
  <Style Selector="Window">
    <Setter Property="Background" Value="#18191A"/>
  </Style>
  
  <!-- 定義面板樣式 -->
  <Style Selector="Border.panel">
    <Setter Property="Background" Value="#2D2D30"/>
    <Setter Property="BoxShadow" Value="0 2 8 0 #40000000"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="BorderBrush" Value="#3E3E42"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Margin" Value="5"/>
  </Style>
  
  <!-- PIP資料分隔屬性區塊標題顏色、icon顏色、label顏色統一 -->
  <Style Selector="TextBlock.section-title">
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="Foreground" Value="#4FC3F7"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
  </Style>
  <Style Selector="TextBlock">
    <Setter Property="Foreground" Value="#B3E5FC"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
    <Setter Property="FontFamily" Value="Segoe UI, Microsoft JhengHei, Arial"/>
  </Style>
  <Style Selector="Path.section-icon">
    <Setter Property="Fill" Value="#4FC3F7"/>
  </Style>
  <!-- PIP資料分隔屬性區塊輸入區域 -->
  <Style Selector="Border.input-area">
    <Setter Property="Background" Value="#232324"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="BorderBrush" Value="#484848"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="MinHeight" Value="120"/>
  </Style>
  
  <!-- 定義文字輸入框 -->
  <Style Selector="TextBox.input">
    <Setter Property="FontFamily" Value="Consolas, Segoe UI Symbol, Segoe UI Emoji, Microsoft JhengHei, SimSun"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Foreground" Value="#E3F2FD"/>
    <Setter Property="CaretBrush" Value="#4FC3F7"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
    <Setter Property="AcceptsReturn" Value="True"/>
    <Setter Property="VerticalContentAlignment" Value="Top"/>
    <Setter Property="HorizontalContentAlignment" Value="Left"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="SelectionBrush" Value="#4FC3F7"/>
    <Setter Property="SelectionForegroundBrush" Value="Black"/>
    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
  </Style>
  
  <Style Selector="TextBox.sql-output">
    <Setter Property="Foreground" Value="#81C784"/>
  </Style>
  
  <!-- 定義主要按鈕樣式 -->
  <Style Selector="Button.primary">
    <Setter Property="Background" Value="#1976D2"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="MinWidth" Value="100"/>
    <Setter Property="MinHeight" Value="35"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="BorderThickness" Value="0"/>
  </Style>
  
  <Style Selector="Button.primary:pointerover">
    <Setter Property="Background" Value="#1565C0"/>
  </Style>

  <Style Selector="Button.primary:pressed">
    <Setter Property="Background" Value="#0D47A1"/>
  </Style>

  <!-- 定義次要按鈕樣式 -->
  <Style Selector="Button.secondary">
    <Setter Property="Background" Value="#2D2D30"/>
    <Setter Property="Foreground" Value="#F44336"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="BorderBrush" Value="#F44336"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="MinWidth" Value="90"/>
    <Setter Property="MinHeight" Value="35"/>
  </Style>
  
  <Style Selector="Button.secondary:pointerover">
    <Setter Property="Background" Value="#F44336"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>

  <Style Selector="Button.secondary:pressed">
    <Setter Property="Background" Value="#D32F2F"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>

  <!-- ComboBox 樣式 -->
  <Style Selector="ComboBox.theme-selector">
    <Setter Property="Background" Value="#4D4D4D"/>
    <Setter Property="Foreground" Value="#E3F2FD"/>
    <Setter Property="BorderBrush" Value="#6D6D6D"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="Padding" Value="10,8"/>
    <Setter Property="MinWidth" Value="120"/>
    <Setter Property="MaxWidth" Value="200"/>
  </Style>

  <Style Selector="ComboBox.theme-selector:pointerover">
    <Setter Property="Background" Value="#5D5D5D"/>
  </Style>

  <Style Selector="ComboBox.theme-selector:focus">
    <Setter Property="BorderBrush" Value="#4FC3F7"/>
  </Style>

  <Style Selector="ComboBox.language-selector">
    <Setter Property="Background" Value="#4D4D4D"/>
    <Setter Property="Foreground" Value="#E3F2FD"/>
    <Setter Property="BorderBrush" Value="#6D6D6D"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="Padding" Value="10,8"/>
    <Setter Property="MinWidth" Value="110"/>
    <Setter Property="MaxWidth" Value="130"/>
  </Style>

  <Style Selector="ComboBox.language-selector:pointerover">
    <Setter Property="Background" Value="#5D5D5D"/>
  </Style>

  <Style Selector="ComboBox.language-selector:focus">
    <Setter Property="BorderBrush" Value="#4FC3F7"/>
  </Style>

  <Style Selector="ComboBox.separator-selector">
    <Setter Property="Background" Value="#4D4D4D"/>
    <Setter Property="Foreground" Value="#E3F2FD"/>
    <Setter Property="BorderBrush" Value="#6D6D6D"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontFamily" Value="Consolas"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Padding" Value="8,6"/>
    <Setter Property="MinWidth" Value="80"/>
    <Setter Property="MaxWidth" Value="150"/>
  </Style>

  <Style Selector="ComboBox.separator-selector:pointerover">
    <Setter Property="Background" Value="#5D5D5D"/>
  </Style>

  <Style Selector="ComboBox.separator-selector:focus">
    <Setter Property="BorderBrush" Value="#4FC3F7"/>
  </Style>

  <Style Selector="ComboBoxItem">
    <Setter Property="Background" Value="#4D4D4D"/>
    <Setter Property="Foreground" Value="#E3F2FD"/>
    <Setter Property="Padding" Value="10,8"/>
    <Setter Property="MinHeight" Value="30"/>
  </Style>

  <Style Selector="ComboBoxItem:pointerover">
    <Setter Property="Background" Value="#4FC3F7"/>
    <Setter Property="Foreground" Value="Black"/>
  </Style>

  <Style Selector="ComboBoxItem:selected">
    <Setter Property="Background" Value="#4FC3F7"/>
    <Setter Property="Foreground" Value="Black"/>
  </Style>

  <!-- 表格樣式 -->
  <Style Selector="Grid.data-row">
    <Setter Property="Background" Value="#333333"/>
    <Setter Property="Margin" Value="0,0,0,1"/>
    <Setter Property="MinHeight" Value="30"/>
  </Style>

  <Style Selector="Grid.data-row:nth-child(even)">
    <Setter Property="Background" Value="#383838"/>
  </Style>

  <Style Selector="Grid.data-row:pointerover">
    <Setter Property="Background" Value="#4D4D4D"/>
  </Style>

  <Style Selector="TextBlock.row-number">
    <Setter Property="Background" Value="#2D2D30"/>
    <Setter Property="Foreground" Value="#4FC3F7"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="FontFamily" Value="Consolas"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
  </Style>

  <Style Selector="TextBlock.row-data">
    <Setter Property="Foreground" Value="#E3F2FD"/>
    <Setter Property="FontFamily" Value="Consolas"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>
  
  <!-- 滾動條樣式 -->
  <Style Selector="ScrollViewer">
    <Setter Property="AllowAutoHide" Value="True"/>
  </Style>
  
  <Style Selector="Border.panel ScrollViewer">
    <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
  </Style>
  
  <Style Selector="ScrollBar">
    <Setter Property="Background" Value="#2D2D30"/>
  </Style>
  
  <Style Selector="ScrollBar:horizontal">
    <Setter Property="Height" Value="12"/>
  </Style>
  
  <Style Selector="ScrollBar:vertical">
    <Setter Property="Width" Value="12"/>
  </Style>
  
  <Style Selector="Border.separator-area">
    <Setter Property="Background" Value="#383838"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="BorderBrush" Value="#484848"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="MinHeight" Value="40"/>
  </Style>
  
  <!-- 文字樣式 -->
  <Style Selector="TextBlock">
    <Setter Property="Foreground" Value="#E3F2FD"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
    <Setter Property="FontFamily" Value="Segoe UI Symbol, Segoe UI Emoji, Microsoft JhengHei, SimSun, Arial Unicode MS"/>
  </Style>

  <Style Selector="Button">
    <Setter Property="FontFamily" Value="Segoe UI Symbol, Segoe UI Emoji, Microsoft JhengHei, SimSun, Arial Unicode MS"/>
  </Style>

  <Style Selector="ComboBox">
    <Setter Property="FontFamily" Value="Segoe UI Symbol, Segoe UI Emoji, Microsoft JhengHei, SimSun, Arial Unicode MS"/>
  </Style>

  <!-- 圖示樣式 -->
  <Style Selector="Path">
    <Setter Property="Fill" Value="#4FC3F7"/>
  </Style>

  <Style Selector="Button Path">
    <Setter Property="Fill" Value="{Binding $parent[Button].Foreground}"/>
  </Style>

  <!-- 表格容器樣式 -->
  <Style Selector="Border.table-container">
    <Setter Property="Background" Value="#383838"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="BorderBrush" Value="#484848"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="MinHeight" Value="300"/>
    <Setter Property="MaxHeight" Value="600"/>
  </Style>

  <Style Selector="ScrollViewer.table-scroll">
    <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    <Setter Property="AllowAutoHide" Value="False"/>
  </Style>
  
  <!-- 複製按鈕藍色樣式（圓角正方形） -->
  <Style Selector="Button.copy-button">
    <Setter Property="Background" Value="#4FC3F7"/>
    <Setter Property="Foreground" Value="#1E1E1E"/>
    <Setter Property="BorderBrush" Value="#4FC3F7"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="Width" Value="28"/>
    <Setter Property="Height" Value="28"/>
    <Setter Property="Padding" Value="0"/>
  </Style>
  
  <!-- Splitter 顏色 - 暗黑主題深灰 -->
  <Style Selector="GridSplitter">
    <Setter Property="Background" Value="#3A3A3A"/>
  </Style>

  <!-- 表格標題行樣式（header） -->
  <Style Selector="Grid.data-table-header">
    <Setter Property="Background" Value="#232324"/>
  </Style>
  <Style Selector="TextBlock.data-table-header">
    <Setter Property="Foreground" Value="#4FC3F7"/>
    <Setter Property="FontWeight" Value="Bold"/>
  </Style>
</Styles>