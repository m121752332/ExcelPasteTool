<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ExcelPasteTool.SettingsView">
    <Grid Background="#181818">
        <!-- ToastPanel 右上角，位置下移 -->
        <Border Name="ToastPanel"
                Background="#CC222222"
                CornerRadius="8"
                Padding="18,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,40,40,0"
                ZIndex="1000">
            <TextBlock Name="ToastText" Foreground="#FFA726" FontWeight="Bold" FontSize="15" />
        </Border>
        <StackPanel Margin="40,30,40,30" Spacing="32">
            <!-- 灰底標題區塊 -->
            <Border Background="#232323" CornerRadius="8" Padding="32,18" Margin="0,0,0,12">
                <TextBlock Text="{Binding TitleText.Text}" FontSize="22" FontWeight="Bold" Foreground="#F5F5F5"/>
            </Border>
            <!-- 語言區塊 -->
            <Border Background="#232323" CornerRadius="8" Padding="24,18" Margin="0,0,0,12">
                <StackPanel Spacing="10">
                    <TextBlock Text="{Binding LanguageTitleText.Text}" FontSize="16" FontWeight="Bold" Foreground="#F5F5F5"/>
                    <TextBlock Text="{Binding LanguageDescText.Text}" FontSize="13" Foreground="#B0B0B0" Margin="0,2,0,10"/>
                    <ComboBox Width="320" 
                              ItemsSource="{Binding Languages, Mode=OneWay}" 
                              SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}" 
                              HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>
            <!-- 主題區塊 -->
            <Border Background="#232323" CornerRadius="8" Padding="24,18">
                <StackPanel Spacing="10">
                    <TextBlock Text="{Binding ThemeTitleText.Text}" FontSize="16" FontWeight="Bold" Foreground="#F5F5F5"/>
                    <ComboBox Width="320" 
                              ItemsSource="{Binding Themes, Mode=OneWay}" 
                              SelectedItem="{Binding SelectedTheme, Mode=TwoWay}" 
                              HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>