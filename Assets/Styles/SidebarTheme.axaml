<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- 側邊欄預設深色，hover/選取時都保持黑色 -->
  <Style Selector="#SidebarBorder" x:SetterTargetType="Border">
    <Setter Property="Background" Value="#232323"/>
  </Style>
  <!-- 導覽按鈕預設黑色，滑鼠移上去和選取都保持黑色 -->
  <Style Selector="#SidebarBorder ItemsControl > Border" x:SetterTargetType="Border">
    <Setter Property="Background" Value="#232323"/>
  </Style>
  <Style Selector="#SidebarBorder ItemsControl > Border:pointerover" x:SetterTargetType="Border">
    <Setter Property="Background" Value="#232323"/>
  </Style>
  <Style Selector="#SidebarBorder ItemsControl > Border:selected" x:SetterTargetType="Border">
    <Setter Property="Background" Value="#232323"/>
  </Style>
  <Style Selector="#SidebarBorder ItemsControl > Border:pressed" x:SetterTargetType="Border">
    <Setter Property="Background" Value="#232323"/>
  </Style>
  <!-- 文字區塊設為白色 -->
  <Style Selector="#SidebarBorder TextBlock" x:SetterTargetType="TextBlock">
    <Setter Property="Foreground" Value="White"/>
  </Style>
</Styles>
